    function convertTime(seconds) {
        var minutes = Math.floor(seconds / 60);
        var remainingSeconds = Math.floor(seconds % 60);

        if (remainingSeconds < 10) {
            remainingSeconds = "0" + remainingSeconds;
        }

        return minutes + ":" + remainingSeconds;
    }
